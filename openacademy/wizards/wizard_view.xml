<odoo>
    <data>
        <record model="ir.ui.view" id="sessionWizardViewForm">
            <field name="name">Session</field>
            <field name="model">openacademy.wizard</field>
            <field name="priority" eval="22"/>
            <field name="arch" type="xml">
                <form string="Session">
                    <field name="sessions"/>
                    <field name="attendees"/>
                    <footer>
                        <button name="save_attendees" type="object" class="oe_highlight" string="Save"/>
                        <button special='cancel' string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <act_window id="act_sessionWizard"
                        name="Session Wizard Form"
                        src_model="openacademy.session"
                        res_model="openacademy.wizard"
                        view_mode="form"
                        target="new"
                        key2="client_action_multi"/>
    </data>
</odoo>